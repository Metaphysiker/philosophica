<h2>Neuer Event</h2>

<%= form_for(@event) do |f| %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_area :content %>
    </div>

    <div class="field">
      <%= f.label :date %><br />
      <%= f.date_select :date %>
    </div>

    <div class="actions">
      <%= f.submit "Event eintragen" %>
    </div>
<% end %>