<h2>Neuer Blogeintrag</h2>

<%= form_for([@blog, @blogpost]) do |f| %>

    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_area :content, class: "tinymce" %>
    </div>

    <div class="actions">
      <%= f.submit "Blogeintrag erstellen" %>
    </div>
<% end %>

<%= tinymce %>