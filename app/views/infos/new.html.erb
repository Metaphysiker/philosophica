<h2>Neue Info</h2>

<%= form_for(@info) do |f| %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_area :content %>
    </div>

    <div class="field">
      <%= f.label :kind %><br />
      <%= f.number_field :kind %>
    </div>

    <div class="actions">
      <%= f.submit "Info eintragen" %>
    </div>
<% end %>