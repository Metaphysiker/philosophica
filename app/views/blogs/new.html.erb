<h2>Neuer Blog</h2>

<%= form_for(@blog) do |f| %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </div>
    <div class="field">
      Tags<br>
      <%= f.input :tag_list, as: :check_boxes, collection: ['Logik', 'Ethik', 'Metaphysik'] %>
    </div>
    <div class="actions">
      <%= f.submit "Blog erstellen" %>
    </div>
<% end %>