<div class="userview">
  <%= link_to "Früher ", forschung_path(date: @date - 1.month) %>
  <%= "#{@date.strftime("%B")} #{@date.year}" %>
  <%= link_to " Später ", forschung_path(date: @date + 1.month) %>
</div>

<table class="calendar">
  <tr>
    <th>Monday</th>forschung.html.erb
    <th>Tuesday</th><th>Wednesday</th>
    <th>Thursday</th><th>Friday</th>
    <th>Saturday</th><th>Sunday</th>
  </tr>
<% @weeks.each do |week| %>
      <tr>
  <% week.each do |date| %>
              <% if date.month != @date.month %>
                  <td style="background-color: green">
                    <%= date.day %>
                    <% @events.each do |event| %>
                        <% if event.date == date %>
                            <br>
                            <%= link_to event.name, event_path(event) %>
                        <% end %>
                    <% end %>
                  </td>
                  <% else %>
                <td>
    <%= date.day %>
                  <% @events.each do |event| %>
                      <% if event.date == date%>
                          <br>
                          <%= link_to event.name, event_path(event) %>
                      <% end %>
                  <% end %>
                </td>
  <% end %>
        <% end %>
      </tr>
<% end %>
</table>