Event-Kalender<br>
<% if notice %>
    <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
<% end %>

<h1>Events vom <%= "#{@date.strftime("%B")} #{@date.year}" %></h1>



<% @alldays.each do |day| %>
    <% @events.each do |event| %>
        <% event.date_events.each do |data| %>
            <% if data.date == day%>
                <br>
                <%= link_to event.name, event_path(event) %> |
                <div class="clickme" style="display: inline-block;" %>
                 Mehr Information
                 <div class="book" style="display:none;"> <%= event.content %> </div>
                </div> | 
                <%= data.date %><br>
            <% end %>
        <% end %>
    <% end %>
<% end %>

<br>
<%= link_to "Event hinzufügen", new_event_path %><br><br>
<div class="userview">
  <%= link_to "Früher ", kalender_path(date: @date - 1.month) %>
  <%= "#{@date.strftime("%B")} #{@date.year}" %>
  <%= link_to " Später ", kalender_path(date: @date + 1.month) %>
</div>
<br>
<table class="calendar">
  <tr>
    <th>Monday</th>
    <th>Tuesday</th><th>Wednesday</th>
    <th>Thursday</th><th>Friday</th>
    <th>Saturday</th><th>Sunday</th>
  </tr>
<% @weeks.each do |week| %>
      <tr>
  <% week.each do |date| %>
              <% if date.month != @date.month %>
                  <td style="background-color: gray">
                    <%= date.day %>
                    <% @events.each do |event| %>
                        <% event.date_events.each do |data| %>
                            <% if data.date == date%>
                                <br>
                                <%= link_to event.name, event_path(event) %>
                            <% end %>
                        <% end %>
                    <% end %>
                  </td>
                  <% else %>
                <td>
    <%= date.day %>
                  <% @events.each do |event| %>
                      <% event.date_events.each do |data| %>
                        <% if data.date == date%>
                          <br>
                          <%= link_to event.name, event_path(event) %>
                        <% end %>
                      <% end %>
                  <% end %>
                </td>
  <% end %>
        <% end %>
      </tr>
<% end %>
</table>


<script>
  $(document).ready(function(){
    $("div").click(function(){

      if($(this).position().left > 55) {
        $(this).animate({left: '0px'});
      }
      else {
        $(this).animate({left: '250px'});
      }
    });

    $( ".clickme" ).click(function() {
      $(this).children(".book").toggle( "slow", function() {
        // Animation complete.$( "div" ).children( ".selected" ).css( "color", "blue" );
      });
    });


  });
</script>