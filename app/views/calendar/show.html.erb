<h1>Events vom <%= "#{@date.strftime("%B")} #{@date.year}" %></h1>

<% actualmonth(@date) %>

<table style="margin-left:auto;margin-right:auto;">
  <thead>
  <tr>
    <th>Name</th>
    <th>Inhalt</th>
    <th>Datum</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @eventsmonth.each do |event| %>
      <tr>
        <td><%= link_to event.name, event_path(event) %></td>
        <td><%= event.content %></td>
        <td><%= event.date %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<br>
<%= link_to "Event hinzufügen", new_event_path %><br>

    <div class="userview">
      <%= link_to "Früher ", calendar_path(date: @date - 1.month) %>
      <%= "#{@date.strftime("%B")} #{@date.year}" %>
      <%= link_to " Später ", calendar_path(date: @date + 1.month) %>
    </div>
<br>


    <%= calendar @date do |date| %>
        <%= date.day %>
        <% @events.each do |event| %>
            <% if event.date == date %>
                <br>
            <%= link_to event.name, event_path(event) %>
            <% end %>
        <% end %>
    <% end %>


